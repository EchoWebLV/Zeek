# ZEKE Privacy Bot - Slim version (without Zingo CLI)
# Use this for demo mode or when zingo-cli is installed separately

FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm ci

# Copy source
COPY . .

# Build TypeScript
RUN npm run build

# Production stage
FROM node:20-alpine AS production

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install production dependencies only
RUN npm ci --only=production

# Copy built files from builder
COPY --from=builder /app/dist ./dist

# Copy proto files (needed for lightclient)
COPY --from=builder /app/proto ./proto

# Create data directories
RUN mkdir -p /app/testBlog /app/test

# Set environment variables
ENV NODE_ENV=production

# Default command - run in demo mode
CMD ["node", "dist/blog.js", "--demo"]


